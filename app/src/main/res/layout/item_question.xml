<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    android:layout_margin="10dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q: Sample Question"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1E1E1E"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/optionATextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Option A"
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/optionBTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B: Option B"
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/optionCTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C: Option C"
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/optionDTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D: Option D"
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/correctAnswerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correct: A"
            android:textStyle="italic"
            android:textColor="#388E3C"
            android:textSize="15sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
